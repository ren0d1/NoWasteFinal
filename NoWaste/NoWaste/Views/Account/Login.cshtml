@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Log in";
}
<h3>@ViewData["Title"]</h3>
<div class="col-md-4">
    <section>
        <form asp-controller="Account" asp-action="Login" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mdl-textfield mdl-js-textfield">
                <label asp-for="Email" class="mdl-textfield__label" for="Email">Email</label>
                <input asp-for="Email" class="mdl-textfield__input" type="text" id="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mdl-textfield mdl-js-textfield">
                <label asp-for="Password" class="mdl-textfield__label" for="Password">Password</label>
                <input asp-for="Password" class="mdl-textfield__input" type="password" id="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>-->
            <div class="form-group">
                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">
                    Log in
                </button>
            </div>
            <div class="form-group">
                <p>
                    <a asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
                    <a asp-controller="Account" asp-action="Register">Register as a new user?</a>
                </p>
            </div>
        </form>
    </section>
</div>
<div class="col-md-6 col-md-offset-2">
    <section>
        @{
            var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
            if (loginProviders.Count == 0)
            {
                <div>
                    <p>
                        There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                        for details on setting up this ASP.NET application to support logging in via external services.
                    </p>
                </div>
            }
            else
            {
                <form asp-area="" asp-controller="Account" asp-action="ExternalLogin" method="post" class="form-horizontal">
                    <div style="text-align:center;">
                        @foreach (var provider in loginProviders)
                        {
                            <p style="display:inline-block;">
                                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.Name</button>
                            </p>
                        }
                    </div>
                </form>
            }
        }
    </section>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
