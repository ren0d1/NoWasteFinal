@using Microsoft.AspNetCore.Identity
@using NoWaste.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <button type="submit" class="mdl-button mdl-js-button">Log out</button>
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login" class="mdl-navigation__link">Log in</a>
    <a asp-controller="Account" asp-action="Register" class="mdl-navigation__link">Register</a>
}
