@model NoWaste.Models.Advert
@{
    ViewData["Title"] = "AdvertDetails";
}
<div id="photo-disp" style="background-image: url('@Model.Picture'); background-size: cover;">
</div>
<h3>
    @Model.Title
</h3>
<p>
    @Model.Description
</p>
<div class="center">
    <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" href="/Home/RequestAdvert/@Model.Id">
        I want it
    </a>
</div>
<div class="user-section">
    <p>
        Offred by <b>@Model.Owner.FirstName @Model.Owner.LastName</b>
    </p>
    <p>
        *******
    </p>
</div>

<div>
    <a class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab" onclick="GoBack();">
        <i class="material-icons">arrow_back</i>
    </a>
</div>
<script>
    $(document).ready(function () {
        document.getElementById('photo-disp').style.backgroundImage = "url(@Model.Picture)";        
    });
    function GoBack() {
        window.location.href = document.referrer;
    }
</script>

