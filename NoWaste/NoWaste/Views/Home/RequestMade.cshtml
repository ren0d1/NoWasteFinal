@model List<NoWaste.Models.HomeViewModels.RequestViewModel>
@{
    ViewData["Title"] = "RequestMade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Your requests</h4>

<!-- List items with avatar and action -->
<style>
    .list-request {
        width: 300px;
    }
</style>

<div class="list-request mdl-list">
    @foreach (var r in Model)
    {
        <div class="mdl-list__item">
            <span class="mdl-list__item-primary-content">
                <i class="material-icons mdl-list__item-avatar">person</i>
                <span>@r.Advert.Title</span>
            </span>
            <a class="mdl-list__item-secondary-action" href="/Home/AdvertDetails/@r.Request.AdvertId"><i class="material-icons">keyboard_arrow_right</i></a>
            @if (r.Request.IsAcquitted)
            {
                <span>Accepted</span>
            }
            else
            {
                <span>Pending...</span>
            }
        </div>
    }
</div>

